@model HealingTalkNearestYou.Models.Counselling

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Counselling</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Counselling Time
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CDateTime)
        </dd>

        <dt>
            Rate
        </dt>

        <dd>
            @for (int i = 0; i < Model.CRate; i++)
            {
                <span class="glyphicon glyphicon-star"></span>
            }
            @if (Model.CRate != null)
            {
                for (int i = (int)Model.CRate; i < 5; i++)
                {
                    <span class="glyphicon glyphicon-star-empty"></span>
                }
            }
            else
            {
                for (int i = 0; i < 5; i++)
                {
                    <span class="glyphicon glyphicon-star-empty"></span>
                }
            }

        </dd>

        <dt>
            Status
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CStatus)
        </dd>

        <dt>
            Psychologist Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Psychologist.PsyName)
        </dd>

        <dt>
            Patient Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Patient.PatientName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CId }) |
    @Html.ActionLink("Back to List", "ManageCounselling")
</p>
