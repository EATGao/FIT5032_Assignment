@model HealingTalkNearestYou.Models.Counselling

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<script type="text/javascript">
    function VerifiedDate() {
        var userInput = $("#datetime").data("DateTimePicker").date().toISOString();
        $("#counsellingDateTime").val(userInput);

        if ($("#counsellingDateTime").val() == "0" || $("#counsellingDateTime").val() == null) {
            alert("Date time required");
            return false;
        }
    }
</script>

@using (Html.BeginForm("EditUnbookedCounselling", "Psychologist", FormMethod.Post, new { onsubmit = "return VerifiedDate()" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Counselling</h4>
    <hr />
    <input type="hidden" name="id" value="@ViewBag.id" />

    <div class="form-group">
        <div class="col-md-10">
            <label>Date and Time <input class="form-control" type="text" id="datetime" value="@ViewBag.dateAndTime" /></label>
            <input type="hidden" name="dateTime" id="counsellingDateTime" value="0" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>

<script>
    $('#datetime').datetimepicker({
        format: 'YYYY/MM/DD HH:mm',
        stepping: 5,
        minDate: new Date()
    });
</script>
}

<div>
    @Html.ActionLink("Back to List", "ManageCounselling")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
