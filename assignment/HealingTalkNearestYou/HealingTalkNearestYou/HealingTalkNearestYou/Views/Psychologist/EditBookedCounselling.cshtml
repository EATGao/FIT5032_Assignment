@model HealingTalkNearestYou.Models.Counselling

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("EditBookedCounselling", "Psychologist", FormMethod.Post, new { onsubmit = "return VerifiedDate()" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Counselling</h4>
        <hr />
        <input type="hidden" name="id" value="@ViewBag.id" />

        <div class="form-group">
            <div class="col-md-10">
                Date and Time:
                <input class="form-control" type="text" id="datetime" value="@ViewBag.dateAndTime" readonly />
                <input type="hidden" name="dateTime" id="counsellingDateTime" value="0" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                Status:
                <label>
                    Booked
                    <input type="radio" value="Booked" name="status" checked />
                </label>
                <label>
                    Completed
                    <input type="radio" value="Completed" name="status" />
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>

    <script>
    $('#datetime').datetimepicker({
        format: 'YYYY/MM/DD HH:mm',
        minDate: new Date()
    });
    </script>
}

<div>
    @Html.ActionLink("Back to List", "BookedCounselling")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
