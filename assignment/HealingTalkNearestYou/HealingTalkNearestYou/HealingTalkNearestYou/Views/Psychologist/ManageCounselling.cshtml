@model IPagedList<HealingTalkNearestYou.Models.Counselling>
@using PagedList;
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "ManageCounselling";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<h2>Avilable Counselling</h2>
<br>
<p>
    @Html.ActionLink("Create New", "CreateCounselling")
</p>
<p>
    @Html.ActionLink("Check Booked Counselling", "BookedCounselling")
</p>

@using (Html.BeginForm("ManageCounselling", "Psychologist", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    @Html.TextBox("search", "", new { @placeholder = "Enter Counselling ID", @type = "number" })
    <input type="submit" name="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            @Html.ActionLink("Time", "ManageCounselling", new { sort = ViewBag.SortByTime, search = Request.QueryString["search"] })
        </th>
        <th>
            Status
        </th>
        <th>
            Operations
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">No counselling records...</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CDateTime, "MyDateTime") -
                    @Html.DisplayFor(modelItem => item.CEndDateTime, "MyDateTime")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CStatus)
                </td>

                @if (item.CStatus.Equals("Not Booked"))
                {
                    <td>
                        @Html.ActionLink("Edit", "EditUnbookedCounselling", new { id = item.CId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CId })
                    </td>
                }
                else
                {
                    <td>@Html.ActionLink("Details", "Details", new { id = item.CId })</td>
                }
            </tr>
        }
    }

</table>
@Html.PagedListPager(Model, pageNumber => Url.Action("ManageCounselling", new { pageNumber, search = Request.QueryString["search"], sort = Request.QueryString["sort"] }))

