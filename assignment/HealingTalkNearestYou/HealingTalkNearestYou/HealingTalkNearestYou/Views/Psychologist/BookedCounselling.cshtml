@model IPagedList<HealingTalkNearestYou.Models.Counselling>
@using PagedList;
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />
@{
    ViewBag.Title = "ManageCounselling";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Booked Counselling</h2>

<p>
    @Html.ActionLink("Manage Counselling", "ManageCounselling")
</p>

@using (Html.BeginForm("BookedCounselling", "Psychologist", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    @Html.TextBox("search", "", new { @placeholder = "Enter Patient Name" })
    <input type="submit" name="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Time", "BookedCounselling", new { sort = ViewBag.SortByTime, search = Request.QueryString["search"] })
        </th>
        <th>
            @Html.ActionLink("Patient Name", "BookedCounselling", new { sort = ViewBag.SortByPatientName, search = Request.QueryString["search"] })
        </th>
        <th>
            @Html.ActionLink("Status", "BookedCounselling", new { sort = ViewBag.SortByStatus, search = Request.QueryString["search"] })
        </th>
        <th>
            Operations
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">No booked counselling records</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CDateTime, "MyDateTime") -
        @Html.DisplayFor(modelItem => item.CEndDateTime, "MyDateTime")
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Patient.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CStatus)
    </td>

    @if (item.CStatus.Equals("Completed"))
    {
        if (item.FeedbackFile == null)
        {
            <td>
                @Html.ActionLink("Upload Feedback", "UploadFeedback", new { id = item.CId }) |
                @Html.ActionLink("Details", "BookedDetails", new { id = item.CId })
            </td>
        }
        else
        {
            <td>
                @Html.ActionLink("Check Feedback", "CheckFeedback", new { id = item.CId }) |
                @Html.ActionLink("Details", "BookedDetails", new { id = item.CId })
            </td>
        }
    }
    else
    {
        <td>
            @Html.ActionLink("Edit", "EditBookedCounselling", new { id = item.CId }) |
            @Html.ActionLink("Details", "Details", new { id = item.CId })
        </td>
    }
</tr>
        }
    }

</table>
@Html.PagedListPager(Model, pageNumber => Url.Action("BookedCounselling", new { pageNumber, search = Request.QueryString["search"], sort = Request.QueryString["sort"] }))

