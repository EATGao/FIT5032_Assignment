@{
    ViewBag.Title = "CreateCounselling";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Counselling</h2>
<div style="color:red">@ViewBag.errorMsg</div>
<hr />
<script type="text/javascript">
    function VerifiedDate() {
        var userInput = $("#datetime").data("DateTimePicker").date().toISOString();
        $("#counsellingDateTime").val(userInput);

        if ($("#counsellingDateTime").val() == "0" || $("#counsellingDateTime").val() == null) {
            alert("Date time required");
            return false;
        }
    }
</script>

@using (Html.BeginForm("CreateCounselling", "Psychologist", FormMethod.Post, new { onsubmit = "return VerifiedDate()" }))
{
    @Html.AntiForgeryToken()
    <p>You could set your couselling start date and time for next 7 days. One counselling is last for 1 hour. Have a nice day!</p>
    <div class="container" style="margin:80px">
        <p>Date Time:</p>
        <div style="position: relative">
            <input class="form-control" data-format="yyyy-MM-dd hh:mm" type="text" id="datetime" />
        </div>
    </div>
    <div>
        <input type="hidden" name="dateTime" id="counsellingDateTime" value="0" />
    </div>
    <div>
        <input type="submit" value="Save" name="CreateCounselling" class="btn btn-default" />
    </div>
    <script>

        $('#datetime').datetimepicker({
            format: 'YYYY/MM/DD HH:mm',
            stepping: 60,
            minDate: new Date(),
            maxDate: new Date().setDate(new Date().getDate() + 7),
        });
    </script>

}

<div>
    @Html.ActionLink("Back to List", "ManageCounselling")
</div>
