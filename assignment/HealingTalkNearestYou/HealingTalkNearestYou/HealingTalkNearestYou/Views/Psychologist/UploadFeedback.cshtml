@{
    ViewBag.Title = "UploadFeedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UploadFeedback</h2>

@using (Html.BeginForm("UploadFeedback", "Psychologist", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Upload Feedback</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" name="cid" value="@ViewBag.cid" />

    <div class="form-group">
        <label class="control-label col-md-2" for="Name">Select File</label>
        <div class="col-md-10">
            <input type="file" name="postedFile" class="btn btn-default" accept="application/pdf" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="UploadFeedback" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "BookedCounselling")
</div>
