@{
    ViewBag.Title = "UploadFeedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Upload Feedback</h2>

<script>
    function SendOrNot() {
        if ($("#send:checked")) {
            $("#send").val("true");
        }
    }
</script>

@using (Html.BeginForm("UploadFeedback", "Psychologist", FormMethod.Post,
    new { enctype = "multipart/form-data", onsubmit = "return SendOrNot()" } ))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <input type="hidden" name="cid" value="@ViewBag.cid" />

    <div class="form-group">
        <label class="control-label col-md-2" for="Name">Select File</label>
        <div class="col-md-10">
            <input type="file" name="postedFile" class="btn btn-default" accept="application/pdf" />
            <br />
            <label><input type="checkbox" name="send" id="send" value="false"/> Send to Patient</label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="UploadFeedback" class="btn btn-default" />
        </div>
    </div>
</div>

}

<div>
    @Html.ActionLink("Back to List", "BookedCounselling")
</div>
