@model IPagedList<HealingTalkNearestYou.Models.ApplicationUser>
@using PagedList;
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />

@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Users</h2>

@using (Html.BeginForm("ManageUser", "Admin", FormMethod.Get))
{
    @Html.AntiForgeryToken()
    <b> Search For: </b>
    @Html.TextBox("search","", new { @placeholder = "Enter User Name/Email" })
    <input type="submit" name="submit" value="Search" />
}
<div style="font:bold;color:red">For users who have booked/created counsellings, you cannot delete them.</div>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Email", "ManageUser", new { sort = ViewBag.SortByEmail, search = Request.QueryString["search"] })
        </th>
        <th>
            @Html.ActionLink("Name", "ManageUser", new { sort = ViewBag.SortByName, search = Request.QueryString["search"] })
        </th>
        <th>
            Gender
        </th>
        <th>
            Date of Birth
        </th>
        <th>
            Operation
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">No user records</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB,"MyDate")
                </td>
                @if (item.Counsellings.Count == 0)
                {
                    <td>
                        @Html.ActionLink("Edit", "EditUser", new { id = item.Id }) |
                        @Html.ActionLink("Detail", "DetailUser", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
                else
                { 
                    <td>
                        @Html.ActionLink("Edit", "EditUser", new { id = item.Id }) |
                        @Html.ActionLink("Detail", "DetailUser", new { id = item.Id })
                    </td>
                }
            </tr>
        }
    }

</table>
@Html.PagedListPager(Model, pageNumber => Url.Action("ManageUser", new { pageNumber, search = Request.QueryString["search"], sort = Request.QueryString["sort"] }))