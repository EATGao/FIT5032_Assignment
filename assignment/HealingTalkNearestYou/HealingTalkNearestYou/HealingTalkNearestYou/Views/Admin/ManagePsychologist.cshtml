@model IPagedList<HealingTalkNearestYou.Models.Psychologist>
@using PagedList;
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" />

@{
    ViewBag.Title = "ManagePsychologist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Psychologists</h2>
@using (Html.BeginForm("ManagePatient", "Admin", FormMethod.Get))
{
    <b> Search For: </b>
    @Html.RadioButton("option", "ID", true) <text>ID</text>
    @Html.RadioButton("option", "Name")<text>Name</text>
    @Html.TextBox("search")
    <input type="submit" name="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("ID", "ManagePsychologist", new { sort = ViewBag.SortByID, search = Request.QueryString["search"] })
        </th>
        <th>
            Email
        </th>
        <th>
            @Html.ActionLink("Name", "ManagePsychologist", new { sort = ViewBag.SortByName, search = Request.QueryString["search"] })
        </th>
        <th>
            Operation
        </th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">No psychologist records</td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PsyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PsyEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PsyName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditPsy", new { id = item.PsyId }) |

                    @Html.ActionLink("Delete", "DeletePsy", new { id = item.PsyId }) |

                    @Html.ActionLink("Detail", "DetailPsy", new { id = item.PsyId })
                </td>
            </tr>
        }
    }

    </table>
@Html.PagedListPager(Model, pageNumber => Url.Action("ManagePsychologist", new { pageNumber, option = Request.QueryString["option"], search = Request.QueryString["search"], sort = Request.QueryString["sort"] }))